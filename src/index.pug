mixin icon(name, brand='Material Icons')
	case brand
		when 'Material Icons'
			mwc-icon.icon= name
		when 'fas'
		when 'fab'
			.icon(class=[brand, 'fa-'+name])
		default
			- throw new Error(`Unknown icon provider: '${brand}' (requested for icon ${name})`)

mixin note(type, title, icon_brand)
	-
		if(type === undefined) { type = 'info'; }
		const partcls = part => `note-${part}-${type}`;
	table(class=partcls('container'))
		tr
			td: div(class=partcls('icon')): +icon(type, icon_brand)
			td
				if title
					h3(class=partcls('title'))= title
				else
					div(class=partcls('body')): block
		if title
			tr
				td
				td: div(class=partcls('body'))
					block

